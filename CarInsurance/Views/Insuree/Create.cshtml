@model CarInsurance.Models.Insuree

<h2 class="mb-4">Create Quote</h2>

<form asp-action="Create" method="post" class="col-md-6">

    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email Address</label>
        <input asp-for="EmailAddress" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Age</label>
        <input asp-for="Age" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Car Year</label>
        <input asp-for="CarYear" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Car Make</label>
        <input asp-for="CarMake" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Car Model</label>
        <input asp-for="CarModel" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Speeding Tickets</label>
        <input asp-for="SpeedingTickets" class="form-control" />
    </div>

    <div class="form-check mb-2">
        <input asp-for="DUI" class="form-check-input" />
        <label class="form-check-label">DUI</label>
    </div>

    <div class="form-check mb-3">
        <input asp-for="FullCoverage" class="form-check-input" />
        <label class="form-check-label">Full Coverage</label>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

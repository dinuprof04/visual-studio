@model IEnumerable<CarInsurance.Models.Insuree>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Admin</h2>
            <p class="text-muted mb-0">Issued Quotes</p>
        </div>

        <a class="btn btn-outline-primary" asp-controller="Insuree" asp-action="Create">
            + Create New Quote
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 18%;">First Name</th>
                            <th style="width: 18%;">Last Name</th>
                            <th>Email</th>
                            <th class="text-end" style="width: 14%;">Quote</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    No quotes have been issued yet.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>
                                        <a href="mailto:@item.EmailAddress">@item.EmailAddress</a>
                                    </td>
                                    <td class="text-end fw-semibold">
                                        @item.Quote.ToString("C")
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
